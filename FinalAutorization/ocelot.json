        {
          "Host": "epa-webapi",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/wordlist"
    },
    {
      "UpstreamPathTemplate": "/api/wordlist/{id}",
      "UpstreamHttpMethod": [ "Get", "Put", "Delete" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "epa-webapi",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/wordlist/{id}"
    },
    {
      "UpstreamPathTemplate": "/api/wordpool",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "epa-webapi",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/wordpool"
    },
    {
      "UpstreamPathTemplate": "/api/wordpool/{id}",
      "UpstreamHttpMethod": [ "Put", "Delete" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "epa-webapi",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/wordpool/{id}"
    },
    {
      "UpstreamPathTemplate": "/api/OpenAI/start",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "epa-webapi",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/OpenAI/start"
    },
    {
      "UpstreamPathTemplate": "/api/OpenAI/check",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "epa-webapi",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/OpenAI/start"
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:800"
  }
}
